# =============================================================================
# Orbitport Oracle Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# Network Configuration
# =============================================================================
RPC_URL=
PRIVATE_KEY=

# eOracle chain ID (required for JSON config)
EORACLE_CHAIN_ID=1

# =============================================================================
# BeaconManager Deployment (Required)
# =============================================================================
FEED_VERIFIER_ADDRESS=0x
PAUSER_REGISTRY_ADDRESS=0x
BEACON_DEPLOYER_ADDRESS=0x

# Optional: Defaults to deployer address if not set
OWNER_ADDRESS=0x

# =============================================================================
# VRFAdapter Deployment (Required after BeaconManager is deployed)
# =============================================================================
BEACON_MANAGER_PROXY_ADDRESS=0x

# Optional: Defaults to 1
BEACON_ID=1

# =============================================================================
# Full Deployment Options (Optional)
# =============================================================================
# Whether to deploy BLS and FeedVerifier (defaults to true)
DEPLOY_BLS=true
DEPLOY_FEED_VERIFIER=true

# Existing addresses (if not deploying new ones)
BLS_ADDRESS=0x
TIMELOCK_ADDRESS=0x

# Comma-separated beacon IDs to support initially
INITIAL_SUPPORTED_BEACONS=1,2,3

# Comma-separated publisher addresses to whitelist initially
INITIAL_PUBLISHERS=0x,0x

# =============================================================================
# Admin Operations
# =============================================================================
VRF_ADAPTER_ADDRESS=0x
